{
  "manifest_version": 3,
  "name": "SYNTH™ — AI Governance Evaluator",
  "version": "1.0.0",
  "description": "Run SYNTH evaluation on any text. Proprietary multi-judge frontier evaluation for AI governance.",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "contextMenus",
    "activeTab",
    "storage",
    "scripting"
  ],
  "optional_permissions": [
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "SYNTH™ Evaluator"
  },
  "content_scripts": [],
  "web_accessible_resources": [
    {
      "resources": ["sidepanel.html", "sidepanel.js", "sidepanel.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
